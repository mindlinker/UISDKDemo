<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shareFastSwitch"
    android:layout_width="@dimen/ml_px_68"
    android:layout_height="@dimen/ml_px_38"
    android:layout_alignParentEnd="true"
    android:background="@drawable/bg_switch_close">

    <ImageView
        android:id="@+id/shareSwitchOpenBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@drawable/bg_switch_open"
        android:focusable="false" />

    <ImageView
        android:id="@+id/shareSwitchButton"
        android:layout_width="@dimen/ml_px_30"
        android:layout_height="@dimen/ml_px_30"
        android:layout_marginTop="@dimen/ml_px_4"
        android:layout_marginStart="@dimen/ml_px_2"
        android:background="@drawable/ic_switch_circle"
        android:focusable="false" />
</FrameLayout>